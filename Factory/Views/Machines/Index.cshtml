@{
    Layout = "_Layout";
} @using Factory.Models

<h1>Machines</h1>

@if (@Model.Count == 0)
{
    <div id="empty-value-div">
    <h3>There are no currently no Machines.</h3>
    <p>
        Add a Machine
        <span id="inner-nav-link">@Html.ActionLink("HERE", "Create")</span> in
        order to Add Machines.
    </p>
</div>

    <div id="nav-links">
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>
}
else
{
    <div id="nav-links">
    <p>@Html.ActionLink("Add Machine", "Create", "Machines")</p>
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
    <p>@Html.ActionLink("Add Engineer", "Create", "Engineers")</p>
</div>
}

<ul class="engineer-machine-link">
    @foreach (Machine machine in Model)
    {
        <li class="list-margins">
            @Html.ActionLink($"{machine.Name}", "Details", "Machines", new {id =
        machine.MachineId})
        </li>
    }
</ul>
