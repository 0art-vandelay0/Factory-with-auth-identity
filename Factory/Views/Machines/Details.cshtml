@{
    Layout = "_Layout";
}

@using Factory.Models
@model Factory.Models.Machine

<h1 class="display-name">@Model.Name</h1>

@if (@Model.JoinEntities.Count == 0)
{
    <p>This machine is not assigned to any licensed engineers.</p>
}
else
{
    <h4>Engineers with a license for this machine:</h4>
    <ul class="engineer-machine-link">
        @foreach (var engineer in Model.JoinEntities)
        {
            <li class="list-margins">@Html.ActionLink($"{engineer.Engineer.Name}", "Details", "Engineers", new {id = engineer.EngineerId})</li>
        }
    </ul>
}


    <p class="add-to-list">@Html.ActionLink("Add Engineer Here", "AddEngineer", "Machines", new {id = Model.MachineId})</p>

<div id="nav-links">
    <p>@Html.ActionLink("Machines", "Index", "Machines")</p>
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
    <p>@Html.ActionLink("Edit Machine", "Edit", new { id = Model.MachineId })</p>
    <p>@Html.ActionLink("Delete Machine", "Delete", new { id = Model.MachineId })</p>
</div>