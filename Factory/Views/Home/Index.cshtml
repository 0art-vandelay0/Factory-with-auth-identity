@{

    Layout = "_Layout";

} @using Factory.Models;

<h1 id="home-page-title">Dr. Sillystringz Maintenance Manager</h1>

<div id="home-page-overview">
    <p>For your Maintenance tracking needs!</p>
    <p>
        This Maintenance Management System helps manage Engineer and Machine
        information to help keep operations running smoothly.
    </p>
    <p id="home-page-overview-disclaimer">
        Use the links at the bottom of this page to navigate to the Engineer
        List and Machine List pages.
    </p>
</div>

@if (User.Identity.IsAuthenticated)
{
    <div id="nav-links">
        <p>@Html.ActionLink("Engineers", "Index", "Engineers")</p>
        <p>@Html.ActionLink("Machines", "Index", "Machines")</p>
    </div>
}
else
{
    

    <p id="empty-value-div">Please login or register to view or manage the system.</p>

    <div id="empty-value-div">
        <p>@Html.ActionLink("Register", "Register", "Account")  &nbsp;&nbsp;|&nbsp;&nbsp;  @Html.ActionLink("Log in", "Login", "Account")</p>
    </div>
}

