@{
    Layout = "_Layout";
} @using Factory.Models

<h1>Engineers</h1>

@if (@Model.Count == 0)
{
    <div id="empty-value-div">
    <h3>There are currently no engineers.</h3>
    <p>
        Add an Engineer
        <span id="inner-nav-link">@Html.ActionLink("HERE", "Create")</span> in
        order to Add Engineers.
    </p>
</div>

    <div id="nav-links">
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>

}
else
{
    <div id="nav-links">
    <p>@Html.ActionLink("Add Engineer", "Create", "Engineers")</p>
    <p>@Html.ActionLink("Add Machine", "Create", "Machines")</p>
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>
}
<ul class="engineer-machine-link">
    @foreach (Engineer engineer in Model)
    {
        <li>
            @Html.ActionLink($"{engineer.Name}", "Details", "Engineers", new {id =
        engineer.EngineerId})
        </li>
    }
</ul>

